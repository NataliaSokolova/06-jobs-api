import { showJobs, handleJobs } from "./jobs.js";
import { showLoginRegister, handleLoginRegister } from "./loginRegister.js";
import { showLogin, handleLogin } from "./login.js"; // Updated import
import { showRegister, handleRegister } from "./register.js"; // Updated import
import { handleAddEdit } from "./addEdit.js";

document.addEventListener("DOMContentLoaded", () => {
  token = localStorage.getItem("token");
  message = document.getElementById("message");
  handleLoginRegister();
  handleLogin(); // Call handleLogin
  handleJobs();
  handleRegister(); // Call handleRegister
  handleAddEdit();
  if (token) {
    showJobs();
  } else {
    showLoginRegister();
  }
});